<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Assesment test">
		<message>
			<![CDATA[Layout used for an assesment test]]>
		</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">
			<field type="hidden" name="task" default="quiz.take" value="quiz.take"/>
			<field
				name="id"
				type="sql"
				query="SELECT id, title FROM #__jquiz_quiz WHERE published = 1"
				required="true"
				label="Quiz"
				description="Select quiz to display"
				key_field="id"
				value_field="title"
			/>
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset name="assesmenttext" label="COM_JOOMLAQUIZ_ASSESMENT_TEXT_FORMFIELD_TITLE_LABEL">
			<field name="assesment_descr_before" type="editor" buttons="true" hide="pagebreak,readmore,testimonial" class="inputbox" filter="raw" label="COM_JOOMLAQUIZ_ASSESMENT_TEXT_DESC_BEFORE"/>
			<field name="assesment_descr_after" type="editor" buttons="true" hide="pagebreak,readmore,testimonial" class="inputbox" filter="raw" label="COM_JOOMLAQUIZ_ASSESMENT_TEXT_DESC_AFTER"/>
		</fieldset>
	</fields>
</metadata>
