<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" 
			readonly="true" class="readonly" />

		<field name="cert_name" type="text" class="input-xlarge" size="30"
			label="COM_JOOMLAQUIZ_NAME2"
			required="true" labelclass="control-label" />
		
		<field name="crtf_text" type="textarea" class="input-xlarge" size="50"
			label="COM_JOOMLAQUIZ_TEXT"
			required="false" labelclass="control-label" />
		
		<field
				name="crtf_align"
				type="radio"
				class="btn-group"
				label="COM_JOOMLAQUIZ_TEXT_ALIGN"
				labelclass="control-label"
				default="0">
				<option value="0">Left</option>
				<option value="1">Center</option>
				<option value="2">Right</option>
		</field>
		
		<field
				name="crtf_shadow"
				type="radio"
				class="btn-group"
				label="COM_JOOMLAQUIZ_TEXT_SHADOW"
				labelclass="control-label"
				default="0">
				<option value="0">COM_JOOMLAQUIZ_NO</option>
				<option value="1">COM_JOOMLAQUIZ_YES</option>
		</field>
		
		<field name="text_x" type="text" class="input-xlarge" size="30"
			label="COM_JOOMLAQUIZ_COORDINATE_X"
			required="false" labelclass="control-label" />
			
		<field name="text_y" type="text" class="input-xlarge" size="30"
			label="COM_JOOMLAQUIZ_COORDINATE_Y"
			required="false" labelclass="control-label" />
		
		<field name="text_size" type="text" class="input-xlarge" size="30"
			label="COM_JOOMLAQUIZ_FONTSIZE"
			required="false" labelclass="control-label" />
			
		<field name="cert_offset" type="text" class="input-xlarge" size="30"
			label="COM_JOOMLAQUIZ_OFFSET"
			required="false" labelclass="control-label" /> 	
		
		<field name="rules" type="rules" label="JFIELD_RULES_LABEL"
			translate_label="false" class="inputbox" filter="rules"
			component="com_joomlaquiz" section="quizcategory" validate="rules"
		/>
	</fieldset>
</form>
