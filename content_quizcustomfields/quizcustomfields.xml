<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
	<name>Content - Quiz Custom fields</name>
	<author>JoomPlace Team</author>
	<creationDate>June 2015</creationDate>
	<copyright>(C) JoomPlace, www.joomplace.com</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>support@joomplace.com</authorEmail>
	<authorUrl>www.joomplace.com</authorUrl>
	<version>3.6.1.001</version>
	<description>Displays custom fields from formatted code</description>
	<files>
		<filename plugin="quizcustomfields">quizcustomfields.php</filename>
		<filename>index.html</filename>
		<filename>quizcustomfields.xml</filename>

	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="spacer" name="manual" label="&lt;hr/&gt;#custom dog:Pet name#&lt;br/&gt;#custom password:Your password;password-required#&lt;br/&gt;#custom color:Select color;select;(blue:Blue),(red:Red),(green:Light Green)#&lt;hr/&gt;"/>
				<field name="visible" type="radio" default="0" label="Access" class="btn-group" description="Show custom fields to">
					<option value="0">Everyone</option>
					<option value="1">Registred only</option>
					<option value="2">Guest Only</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
