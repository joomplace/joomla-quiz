<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" client="site" method="upgrade">
	<name>Top X user quiz results</name>
	<author>JoomPlace Team</author>
	<creationDate>September 2020</creationDate>
	<copyright>(C) JoomPlace, www.joomplace.com</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>support@joomplace.com</authorEmail>
	<authorUrl>www.joomplace.com</authorUrl>
	<version>3.7.9</version>
	<description>This module will display a list of the top X users</description>
	<files>
		<filename module="mod_quiz_topxusers">mod_quiz_topxusers.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_quiz_topxusers.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_quiz_topxusers.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_JOOMLAQUIZ_MOD_CLASSSFX_LBL" description="MOD_JOOMLAQUIZ_MOD_CLASSSFX_DESC"/>

				<field name="quiz_count" type="text" default="5" label="MOD_JOOMLAQUIZ_MOD_QUIZCOUNT_LBL" description="MOD_JOOMLAQUIZ_MOD_QUIZCOUNT_DESC"/>

				<field name="user_display" type="radio" default="0" label="MOD_JOOMLAQUIZ_MOD_USERDISPLAY_LBL" description="MOD_JOOMLAQUIZ_MOD_USERDISPLAY_DESC">
					<option value="0">Username</option>
					<option value="1">Name</option>
				</field>

				<field name="user_profile" type="radio" default="0" label="MOD_JOOMLAQUIZ_MOD_USERPROFILE_LBL" description="MOD_JOOMLAQUIZ_MOD_USERPROFILE_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>

				<field name="quizid" type="text" default="" label="MOD_JOOMLAQUIZ_MOD_QUIZID_LBL" description="MOD_JOOMLAQUIZ_MOD_QUIZID_DESC"/>
		</fieldset>
		</fields>
	</config>
</extension>